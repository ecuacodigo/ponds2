<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.phonegap.helloworld" version="1.0.0">

<name>aPONDs</name>

<description>Ponds Aplicacion.</description>

<author email="info@ecuacodigo.com" href="#">Ponds</author>

<content src="index.html"/>

<access origin="*"/>

<platform name="android">

</platform>

<preference name="fullscreen" value="true"/> 
<preference name="DisallowOverscroll" value="true"/> 
<preference name="orientation" value="landscape"/>
<preference name="HideKeyboardFormAccessoryBar" value="false"/>

<plugin name="org.apache.cordova.camera" spec="0.3.6" source="pgb" />
<plugin name="org.apache.cordova.media-capture" spec="0.3.6" source="pgb" />
<plugin name="org.apache.cordova.battery-status" spec="0.2.12" source="pgb" />
<plugin name="org.apache.cordova.contacts" spec="0.2.16" source="pgb" />
<plugin name="org.apache.cordova.media" spec="0.2.16" source="pgb" />
<plugin name="org.apache.cordova.file" spec="1.3.3" source="pgb" />
<plugin name="org.apache.cordova.file-transfer" spec="0.5.0" source="pgb" />
<plugin name="org.apache.cordova.geolocation" spec="0.3.12" source="pgb" />


<feature name="Camera">
    <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
</feature>

<feature name="File">
    <param name="android-package" value="org.apache.cordova.FileUtils" />
</feature>
<feature name="FileTransfer">
    <param name="android-package" value="org.apache.cordova.filetransfer.FileTransfer" />
</feature>

</widget>